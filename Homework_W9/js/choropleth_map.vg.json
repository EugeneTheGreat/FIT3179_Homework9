{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution Of Universities In The World",
  "width": 1000,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Data_Vis2/main/Homework_W9/js/ne_110m.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Data_Vis2/main/Homework_W9/js/ne_110m_graticules_30.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray", "strokeWidth": 0.9}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Data_Vis2/main/Homework_W9/data/countries_university_count.csv"
            },
            "key": "location",
            "fields": ["percentage"]
          }
        },
        {
          "calculate": "datum.percentage",
          "as": "Distribution Percentage"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Distribution Percentage",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.1, 1.75, 3.50, 5.25, 7.00],
            "range": ["#b7e4c7", "#74c69d", "#52b788", "#40916c", "#2d6a4f", "#1b4332"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "percentage", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
      "type": "text",
      "align": "left",
      "baseline": "middle",
      "dx": 350,
      "dy":100,
      "fontSize": 12,
      "fontStyle":"italic",
      "font":"Roboto"
      },
      "encoding": {
      "text": {"value":"Australia"},
      "color": {"value":"black"}
      }
  }
  ]

}