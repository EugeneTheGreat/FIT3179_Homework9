{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution Of Universities In The World",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Data_Vis2/main/Homework_W9/js/ne_110m.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Data_Vis2/main/Homework_W9/data/countries_university_count.csv"
        },
        "key": "location",
        "fields": ["count"]
      }
    },
    {"calculate": "datum.count + 0.1", "as": "Distribution Percentage"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Distribution Percentage",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "count", "type": "quantitative"}
    ]
  }
}